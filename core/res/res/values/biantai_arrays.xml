<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Defines the shutdown options shown in the reboot dialog. -->
    <!-- 定义了"重新启动"对话框中的选项. -->
    <string-array name="shutdown_reboot_options" translatable="false">
        <item>@string/reboot_normal</item>
        <item>@string/reboot_recovery</item>
        <item>@string/reboot_fastboot</item>
    </string-array>

    <!-- Defines the shutdown actions passed to the kernel.
         The first item should be empty for normal reboot. -->
    <!-- 定义了传递给内核的命令.
         第一项为标准重启, 留空. -->
    <string-array name="shutdown_reboot_actions" translatable="false">
        <item></item>
        <item>recovery</item>
        <item>bootloader</item>
    </string-array>

    <array name="shutdown_reboot_icons">
        <item>@drawable/ic_lock_reboot</item>
        <item>@drawable/ic_lock_reboot_recovery</item>
        <item>@drawable/ic_lock_reboot_bootloader</item>
    </array>

    <!-- Defines the mapping of notification package names
         from the actual triggering package to the user selectable package.
         E.g. Hangouts notifications come via Google Services Framework
         Format: [triggering package]|[user package] -->
    <!-- 定义了通知包名的映射, 从真正触发通知的包, 到用户可选择的包.
         栗子: 环聊的通知实际上来自谷歌服务框架
         格式: 触发包|用户包 -->
    <string-array name="notification_light_package_mapping" translatable="false">
        <item>com.google.android.gsf|com.google.android.talk</item>
    </string-array>

</resources>
